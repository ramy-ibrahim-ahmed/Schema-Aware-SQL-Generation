SELECT sd.ITM_CODE, sm.CSTMR_CODE, sm.CSTMR_NM, SUM(sd.ITM_TOTL_FREE_QTY) AS total_free_quantity, SUM(sd.ITM_TOTL_DSCNT_AMT) AS total_discount_amount FROM SALES_BILL_DTL_AI_VW sd INNER JOIN SALES_BILL_MST_AI_VW sm ON sd.DOC_NO = sm.DOC_NO AND sd.DOC_SRL = sm.DOC_SRL AND sd.YR_NO = sm.YR_NO AND sd.UNT_NO = sm.UNT_NO WHERE sm.CLC_TAX_FREE_QTY_FLG = 1 GROUP BY sd.ITM_CODE, sm.CSTMR_CODE, sm.CSTMR_NM;